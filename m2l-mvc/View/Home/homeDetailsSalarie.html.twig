{% extends "homeBase.html.twig" %}
{% block header %}
    {% include 'Home/Layout/homeHeader.html.twig' %}
{% endblock %}
{% block main %}

    {% set row = test %}
    <section>

        <div class="span7">
            <div class="widget stacked widget-table action-table">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3 class="titre">Liste des salariés</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>email</th>
                            <th>status</th>
                            <th>credit</th>
                            <th>nombre de jour de formation</th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr>
                            <td>{{ detalse.nom }}</td>
                            <td>{{ detalse.prenom }}</td>
                            <td>{{ detalse.email }}</td>
                            <td>{{ detalse.status }}</td>
                            <td>{{ detalse.credit }}</td>
                            <td>{{ detalse.nbs_jour }}</td>
                        </tr>

                        </tbody>
                    </table>
                </div>
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3 class="titre">Liste des formation demander</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Formations</th>
                            <th>Date</th>
                            <th>Duree</th>
                            <th>Coût</th>
                            <th>Nb_place</th>
                            <th>Contenu</th>
                            <th>Adresse</th>
                            <th>Prestatair</th>
                            <th>choix</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for row in frtAtt %}
                            <tr>
                                <td>{{ row.titre }}</td>
                                <td>{{ row.date_debut }}</td>
                                <td>{{ row.duree }}</td>
                                <td>{{ row.cout }}</td>
                                <td>{{ row.nb_place }}</td>
                                <td>{{ row.contenu }}</td>
                                <td>{{ row.numero_rue }} {{ row.rue }} {{ row.ville }} {{ row.code_postal }}</td>
                                <td>{{ row.nom }}</td>

                                <td>
                                    <a href="index.php?page=detailsSalarie&id={{ details.id_s }}&choix=valider" class="btn btn-small btn-primary">Valider
