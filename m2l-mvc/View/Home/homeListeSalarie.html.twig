{% extends "homeBase.html.twig" %}
{% block header %}
    {% include 'Home/Layout/homeHeader.html.twig' %}
{% endblock %}
{% block main %}
    <section>

        <div class="span7">
            <div class="widget stacked widget-table action-table">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3 class="titre">Liste des salariés</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Details</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for row in listeSalarie %}
                            <tr>
                                <td>{{ row.nom }}</td>
                                <td>{{ row.prenom }}</td>
                                <td>
                                    <a href="index.php?page=detailsSalarie&id={{ row.id_s }}" class="btn btn-small btn-primary">Details
                                        <i class="btn-icon-only icon-ok"></i>
                                    </a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div> <!-- /widget-content -->

            </div> <!-- /widget -->
        </div>
        <br />
        <br />

    </section>
{% endblock %}