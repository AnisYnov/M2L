{% extends "homeBase.html.twig" %}
{% block style %}
    <link href="web/css/login.css" rel="stylesheet">
{% endblock %}

{% block  main %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">M2L</h1>
                    </div>
                    <div class="panel-body">
                        <form action="./?page=login" method="post" accept-charset="UTF-8" role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="pseudo" name="pseudo" type="text">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Mot de passe oublié"> Mot de passe oublié
                                    </label>
                                </div>
                                <input class="btn btn-lg btn-success btn-block" type="submit" name="formconnexion" value="Login">
                            </fieldset>
                        </form>
                        <br>
                        <h1 style="color:red;">{{ erreur }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
