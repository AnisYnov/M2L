{% extends "homeBase.html.twig" %}
{% block header %}
    {% include 'Home/Layout/homeHeader.html.twig' %}
{% endblock %}
{% block main %}
    <section>

        <div class="span7">
            <div class="widget stacked widget-table action-table">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3 class="titre">Formations Inscrit</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Formations</th>
                            <th>Date</th>
                            <th>Duree</th>
                            <th>Coût</th>
                            <th>Nb_place</th>
                            <th>Contenu</th>
                            <th>Adresse</th>
                            <th>Prestatair</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for row in frtAbonnee %}
                            <tr>
                                <td>{{ row.titre }}</td>
                                <td>{{ row.date_debut }}</td>
                                <td>{{ row.duree }}</td>
                                <td>{{ row.cout }}</td>
                                <td>{{ row.nb_place }}</td>
                                <td>{{ row.contenu }}</td>
                                <td>{{ row.numero_rue }} {{ row.rue }} {{ row.ville }} {{ row.code_postal }}</td>
                                <td>{{ row.nom }}</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                </div> <!-- /widget-content -->

            </div> <!-- /widget -->
        </div>
        <br/>
        <br/>

    </section>
    <section>

        <div class="span7">
            <div class="widget stacked widget-table action-table">

                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3 class="titre">Liste des formations disponible</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Formations</th>
                            <th>Date</th>
                            <th>Duree</th>
                            <th>Coût</th>
                            <th>Nb_place</th>
                            <th>Contenu</th>
                            <th>N° rue</th>
                            <th>Prestatair</th>
                            <th class="td-actions">Choix</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for row in frt %}
                            <tr>
                                <td>{{ row.titre }}</td>
                                <td>{{ row.date_debut }}</td>
                                <td>{{ row.duree }}</td>
                                <td>{{ row.cout }}</td>
                                <td>{{ row.nb_place }}</td>
                                <td>{{ row.contenu }}</td>
                                <td>{{ row.numero_rue }} {{ row.rue }} {{ row.ville }} {{ row.code_postal }}</td>
                                <td>{{ row.nom }}</td>
                                <td class="td-actions">
                                    <a href="index.php?page=abonneFormation&id={{ row.id_f }}" class="btn btn-small btn-primary">
                                        inscrit<i class="btn-icon-only icon-ok"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div> <!-- /widget-content -->

            </div> <!-- /widget -->
        </div>
        <br />
        <br />

    </section>
    <!-- FOOTER -->
    {% block script %}
        <script type="text/javascript" src="web/owl-carousel/owl.carousel.js"></script>
        <script type="text/javascript">
            jQuery(document).ready(function($) {
                $("#owl-demo").owlCarousel({
                    slideSpeed : 300,
                    autoPlay : true,
                    navigation : false,
                    pagination : false,
                    singleItem:true
                });
                $("#owl-demo2").owlCarousel({
                    slideSpeed : 300,
                    autoPlay : true,
                    navigation : false,
                    pagination : true,
                    singleItem:true
                });
            });

        </script>
    {% endblock %}
{% endblock %}
